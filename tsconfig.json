{
  "compilerOptions": {
    "target": "es6",                                 
    "module": "CommonJS",                            
    // "rootDir": "./",                              
    "moduleResolution": "node",                      
    "baseUrl": ".",                                 
    "paths": {
      "@*": ["*"],
      "@utils/*": ["utils/*"]
    },              
     "resolveJsonModule": true,                         
     "allowJs": false,                                    
     "outDir": "dist",                                   
     "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "./swagger-output.json",
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
